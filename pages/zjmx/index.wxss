/* pages/zjmx/index.wxss */
.container {
  margin-bottom: 20rpx;
}
page {
  background: #f1f1f1
}
.header_grp {
  height: 350rpx;
  background: #fd2d2d;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column
}
.header_grp text:first-child {
   color: #fff;
   font-size: 36rpx;
   margin-bottom: 2rpx;
}
.header_grp text:last-child {
   color: #fff;
   font-size: 140rpx;
}
.picker_group {
  display: flex;
  flex-direction: row;
  height: 110rpx;
  align-items: center;
  padding-left: 40rpx;
}
.picker_group .icondate {
  font-size: 36rpx;
  color: #fd2d2d
}
.picker_group .picker {
  color: #999;
  font-size: 24rpx;
  padding: 4rpx 20rpx;
  border: solid 2rpx #ccc;
  margin: 0 20rpx;
}
.line {
  height: 26rpx;
  margin: 0 10rpx;
  background: #f8374a;
  border-radius: 20rpx
}
.mx_mainContent {
  margin: -10rpx 40rpx 30rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.item_all_grp {
  
  display: flex;
  flex-direction: column;
 
}
.item_one {
  height: 120rpx;
  border-bottom: solid 2rpx #eee;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.one_left {
  width: 80%;
  display: flex;
  flex-direction: row;
  align-items: center
}
.one_left >text:first-child {
  color: #fd2d31;
  margin-right: 50rpx;
  font-size: 46rpx;
  padding-left: 10rpx
}
.one_left > view {
  display: flex;
  flex-direction: column;
}
.one_left > view > text:first-child {
 font-size: 32rpx;
 color: #000;
 margin-bottom: 10rpx;
}

.one_left > view > text:last-child {
  font-size: 22rpx;
  color: #999
}
.one_right {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.one_right view text:first-child {
  color: #fd2d31;
  font-size: 28rpx;
}
.one_right view text:nth-child(2) {
  color: #fd2d31;
  font-size: 30rpx;
}
.one_right view text:last-child {
  font-size: 30rpx;
  color: #181818;
  margin-left: 10rpx;
}
.one_right > text {
  font-size: 30rpx;
  color: #181818;
  text-align: right;
  margin-top: 10rpx;
}
.mx_tab_grp .tabContent {
  height: 90rpx;
}
.mx_tab_grp .tabContent >view {
  width: 50%
}
.mx_tab_grp .tabContent > view .tabTitleMain text {
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.xs_tc_grp {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 228rpx;
  align-items: center;
}
.xs_tc_grp .xj_item_one{
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}
.xs_tc_grp .xj_item_one:first-child {
  border-right: solid 2rpx #ccc
}
.xj_item_one view {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.xj_item_one view text:first-child {
  color: #999;
  font-size: 30rpx;
}
.xj_item_one view text:last-child {
  color: #f8374a;
  font-size: 22rpx;
  position: absolute;
  right: -28rpx;
  top: 0;
  font-weight: bold
}
.xj_item_one > text {
  margin-top: 30rpx;
  color: #181818;
  font-size: 28rpx;
}
.xj_link_grp {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 
}
.xj_link_grp > view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
  border-bottom: solid 2rpx #eee
}
.xj_link_grp > view:last-child {
  border-bottom: none
}
.xj_link_grp > view text{
 color: #666;
 font-size: 26rpx;
}
.xj_link_grp > view navigator text{
 color: #666;
 font-size: 24rpx;
}