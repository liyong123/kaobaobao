/* pages/user/xsmx/index.wxss */
page {
  background: #f1f1f1;
}
.item_all_grp {
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  right: 30rpx;
  bottom: 80rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.item_one {
  height: 120rpx;
  border-bottom: solid 2rpx #eee;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.one_left {
  width: 80%;
  display: flex;
  flex-direction: row;
  align-items: center
}
.one_left >text:first-child {
  color: #fd2d31;
  margin-right: 50rpx;
  font-size: 50rpx;
}
.one_left > view {
  display: flex;
  flex-direction: column;
}
.one_left > view > text:first-child {
 font-size: 32rpx;
 color: #000;
 margin-bottom: 10rpx;
}

.one_left > view > text:last-child {
  font-size: 22rpx;
  color: #999
}
.one_right {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.one_right text:first-child {
  color: #fd2d31;
  font-size: 28rpx;
}
.one_right text:nth-child(2) {
  color: #fd2d31;
  font-size: 30rpx;
}
.one_right text:last-child {
  font-size: 30rpx;
  color: #181818;
  margin-left: 10rpx;
}