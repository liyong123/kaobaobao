/* pages/user/myMessage/index.wxss */
.user_my_mes_one {
  border-bottom: solid 1rpx #eee;
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
}
.expert_mes {
  padding-left: 30rpx;
  width: 50%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.expert_mes image {
  width: 76rpx;
  height: 76rpx;
  margin-right: 14rpx;
  border-radius: 38rpx;
}
.expert_mes >view {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center
}
.expert_mes > view > text:first-child {
  font-size: 28rpx;
  color: #181818;
  margin-bottom: 10rpx;
}

.expert_mes > view > text:last-child {
  font-size: 22rpx;
  color: #9e9e9e;
}

.date_tip_grp {
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-right: 30rpx;
}
.date_tip_grp text:first-child {
   font-size: 22rpx;
   color: #9e9e9e;
   margin-bottom: 10rpx;
}

.date_tip_grp text:last-child {
  padding: 3rpx ;
  color: #fff;
  min-width: 28rpx;
  font-size: 20rpx;
  text-align: center;
  background-color: #fa364a;
  border-radius: 16rpx;

}