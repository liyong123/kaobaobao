/* pages/shop/confirmOrders/index.wxss */
page{
  background: #f5f5f5
}
.confirm_order_all {
  display: flex;
  flex-direction: column;
}
.adress_gl {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 0 20rpx;
  padding: 20rpx 0;
 
}

.adress_main {
  width: 90%;
  flex: none;
  flex-direction: row;
  display: flex;
  align-items: center;
}
.adress_main .iconadress {
   font-size: 38rpx;
   color: #f5556c;
   font-weight: bold;
   margin-right: 36rpx;
}
.name_tel_adr_grp {
   display: flex;
   flex-direction: column;
}
.name_tel_adr_grp  view:first-child{
   display: flex;
   flex-direction: row;
   align-items: flex-end;
   margin-bottom: 20rpx;
}
.name_tel_adr_grp  view:first-child text:first-child{
   font-size: 32rpx;
   color: #000;
   margin-right: 24rpx;
}
.name_tel_adr_grp  view:first-child text:last-child{
   font-size: 24rpx;
   color: #999
}
.name_tel_adr_grp  view:last-child text{
   font-size: 28rpx;
   color: #181818
}
.adress_gl .iconnext {
   font-size: 28rpx;
   color: #bebebe
}
.line {
  height: 7rpx;
  display: flex;
  width: 100%;
  background: #3881ec;
  background: -webkit-linear-gradient(left, #f8374d , #3881ec); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #f8374d, #3881ec); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #f8374d, #3881ec); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #f8374d , #3881ec); /* 标准的语法 */
}
.goods_mes_grp {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
}
.goods_mes_in {
  padding: 36rpx 15rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.goods_abstract {
  width: 80%;
  flex: none;
  display: flex;
  align-items: center;
  margin-right: 10rpx;
}
.goods_abstract > image {
  width: 132rpx;
  height: 132rpx;
  flex: none;
  margin-right: 28rpx;
}
.goods_abstract > view  {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  justify-content: space-between;
  height: 100%
}
.goods_abstract > view > text  {
  color: #666;
}
.goods_abstract > view > view  {
  display: flex;
  flex-basis: row;
  color: #999;
  font-size: 24rpx;
}
.goods_value_grp {
  display: flex;
  flex-direction: column;
  color: #f5556c;
  font-size: 30rpx;
}
.goods_value_grp text:last-child {
  text-align: right;
  color: #999;
  margin-top: 20rpx;
  font-size: 24rpx;
}

.anothor_sub_grp {
  display: flex;
  flex-direction: column;
  background: #fff;
}

.navigator_one {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  justify-content: space-between;
  height: 100rpx;
  padding: 0 10rpx 0 50rpx;
}
.navigator_one >text {
  width: 150rpx;
}
.navigator_one >view {
  display: flex;
  height: 100%;
  align-items: center;
}
.navigator_one >view >text.iconnext{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.navigator_one > view > input {
  text-align: center;
  color: #181818;
  font-size: 26rpx;
}

.navigator_one .total text:first-child{
  font-size: 24rpx;
  color: #999;
}
.navigator_one .total text:nth-child(2){
  font-size: 24rpx;
  color: #181818;
}
.navigator_one .total text:nth-child(3){
  font-size: 28rpx;
  color: #f5556c;
}
.submit_grp {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  border-top: solid 2rpx #eee;
  justify-content: space-between;
  padding: 0 30rpx;
}
.submit_grp .submit_btn {
   width: 300rpx;
   height: 68rpx;
   color: #fff;
   font-size: 30rpx;
   display: flex;
   align-items: center;
   justify-content: center;
   background: #f8374a
}