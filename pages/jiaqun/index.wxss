/* pages/jiaqun/index.wxss */
.qun_one {
  height: 300rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.qun_only0 {
  background-size: 100% 100%;
  background-image: url("");   /*图片从远程服务器取*/
}
.erwei_grp {
  display: flex;
  flex-direction: column;
  width: 196rpx;
  justify-content: center;
  margin-right: 62rpx;
}
.erwei_grp image{
  width: 196rpx;
  height: 196rpx;
  margin-bottom: 6rpx;
}
.erwei_grp text{
  color: #fff;
  font-size: 20rpx;
  padding-left: 6rpx;
}
.qun_content {
  display: flex;
  flex-direction: column;
  width: 400rpx;
  height: 200rpx;
  justify-content: center;
}
.qun_content text:first-child {
  font-size: 38rpx;
  color: #fff;
  font-weight: bold;
 
}
.qun_content text:nth-child(2) {
  font-size: 24rpx;
  color: #fff;
  margin-bottom: 26rpx;
}

.qun_content text:last-child {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 6rpx;
  background: #fff;
  color: #3388fd;
  text-align: center;
  font-size: 20rpx;
}
.qun_content text.shibie0 {
  color: #3388fd
}
.qun_content text.shibie1 {
  color: #a559f7
}
.qun_content text.shibie2 {
  color: #7e50fd
}